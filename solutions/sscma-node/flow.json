{
    "device": {
        "id": "recamera-001",
        "name": "ReCamera"
    },
    "nodes": [
        {
            "id": "camera0",
            "type": "camera",
            "config": {
                "option": "1080p",
                "preview": true,
                "jpeg_resolution": {
                    "width": 1920,
                    "height": 1080,
                    "fps": 30
                },
                "raw_resolution": {
                    "width": 1920,
                    "height": 1080,
                    "fps": 15
                },
                "attach_channel": "raw"
            }
        },
        {
            "id": "preprocessor0",
            "type": "image_preprocessor",
            "config": {
                "width": 640,
                "height": 640,
                "debug": true,
                "enable_resize": false,
                "enable_denoising": false,
                "flash_intensity": 255,
                "flash_duration_ms": 10,
                "pre_capture_delay_ms": 50,
                "disable_red_led_blinking": true,
                "attach_channel": "raw"
            },
            "deps": [
                "camera0"
            ]
        }
    ]
}