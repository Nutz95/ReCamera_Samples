{
    "device": {
        "id": "recamera-001",
        "name": "ReCamera"
    },
    "flash_config": {
        "pre_capture_delay_ms": 50,
        "flash_duration_ms": 10,
        "flash_intensity": 255,
        "disable_red_led_blinking": true
    },
    "nodes": [
        {
            "id": "camera0",
            "type": "camera",
            "config": {
                "option": "1080p",
                "preview": true,
                "jpeg_resolution": {
                    "width": 1920,
                    "height": 1080,
                    "fps": 30
                }
            }
        },
        {
            "id": "preprocessor0",
            "type": "image_preprocessor",
            "config": {
                "width": 640,
                "height": 640,
                "debug": true
            },
            "deps": [
                "camera0"
            ]
        },
        {
            "id": "save0",
            "type": "save",
            "config": {
                "path": "/userdata/IMAGES",
                "format": "jpg",
                "prefix": "processed_",
                "count": 1
            },
            "deps": [
                "preprocessor0"
            ]
        }
    ]
}